#:kivy 1.8.0

<sampleWidget>:
    labelstatus: status
    textAD: textADval
    buttonADEnable: ButtonADEnableval

    #Status
    Label:
        id: status
        font_size: 20
        center_x: (root.width/2)
        top: root.top-20
        color: [1,0,0,1]
        text: 'ADConvert'

    #textADval
    TextInput:
        id: textADval
        center_x: (90)
        size: 740,400
        top: root.top-100

    #ButtonADEnable
    Button:
        id: ButtonADEnableval
        center_x: root.width/2
        size: 140,70
        top: root.top-520
        text: 'Start'
